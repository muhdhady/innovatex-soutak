// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   // "resident" or "employee"
  tickets   Ticket[]
  posts     ForumPost[]
  points    Int      @default(0) // Gamification
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   @default("General")
  status      String   @default("OPEN") 
  priority    String   @default("LOW")
  aiSummary   String?  
  createdAt   DateTime @default(now())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model ForumPost {
  id        String   @id @default(cuid())
  question  String
  aiAnswer  String?  // The "Google-like" AI answer
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}